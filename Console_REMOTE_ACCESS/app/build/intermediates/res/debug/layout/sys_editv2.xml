<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/black" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonChannelName"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="206dp"
            android:layout_marginTop="159dp"
            android:text="@string/button_chname" />

        <Button
            android:id="@+id/buttonAssign"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonChannelName"
            android:layout_below="@+id/buttonChannelName"
            android:layout_marginTop="58dp"
            android:text="@string/assing_channel" />

        <Button
            android:id="@+id/buttonVolume"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonAssign"
            android:layout_below="@+id/buttonAssign"
            android:layout_marginTop="56dp"
